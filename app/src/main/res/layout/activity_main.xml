<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/controller"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="166dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/feedback"
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/customborder2"
                android:gravity="center">

                <ImageView
                    android:id="@+id/cap"
                    android:layout_width="158dp"
                    android:layout_height="120dp"
                    app:srcCompat="@android:drawable/ic_menu_upload" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="292dp"
            android:layout_height="match_parent"
            android:layout_alignEnd="@id/feedback2"
            android:layout_marginEnd="213dp"
            android:background="@drawable/customborder"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/feedback255"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/giteRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="00 °" />

                <TextView
                    android:id="@+id/giteLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="00 °" />

            </RelativeLayout>

            <ImageView
                android:id="@+id/gite"
                android:layout_width="239dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="68dp"
                app:srcCompat="@android:drawable/bottom_bar" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/feedback2"
            android:layout_width="209dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:padding="10dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:text="26 km/h" />

                <TextView
                    android:id="@+id/speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:text="500 m" />

            </RelativeLayout>

            <SeekBar
                android:id="@+id/seekBar1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:max="100"
                android:progress="0" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_alignBottom="@id/linearLayout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="318dp"
            android:layout_height="240dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="3dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/leftButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:srcCompat="@android:drawable/ic_media_previous" />

            <ImageButton
                android:id="@+id/rightButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:srcCompat="@android:drawable/ic_media_next" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="235dp"
            android:layout_height="216dp"
            android:layout_alignEnd="@id/seedControl"
            android:layout_alignParentBottom="true"

            android:layout_marginEnd="236dp"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:orientation="vertical">


            <AnalogClock

                android:layout_width="120dp"
                android:layout_height="110dp"
                android:layout_marginBottom="-60dp" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/seedControl"
            android:layout_width="324dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="-1dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:paddingBottom="30dp">

            <TextView
                android:id="@+id/set_speed"
                android:layout_width="86dp"
                android:layout_height="34dp"
                android:text=""
                android:textSize="17dp"
                android:textStyle="bold" />

            <SeekBar
                android:id="@+id/seek_speed"
                android:layout_width="220dp"
                android:layout_height="100dp"
                android:progress="30"
                android:progressDrawable="@drawable/bg_custom_seekbar"
                android:rotation="270"
                android:splitTrack="false"
                android:thumb="@drawable/ic_thumb"
                tools:ignore="RtlSymmetry" />


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>